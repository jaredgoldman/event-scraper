{
  "compilerOptions": {
    "lib": ["ES2022"], // ES2020 in earlier versions
    "module": "ES2022", //ESNext
    "moduleResolution": "Node",
    "target": "ES2022", // ES2020 in earlier versions
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "~/types/*": ["./src/types"],
      "~/services/*": ["./src/services/*"]
    }
  },
  "lib": ["es2015"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
